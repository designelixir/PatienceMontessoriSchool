<!doctype html>
<html>
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro&display=swap" rel="stylesheet">   
    <link href="https://fonts.googleapis.com/css2?family=Cabin:ital,wght@0,400;0,600;1,400;1,600&display=swap" rel="stylesheet">
    <!-- include system scripts, page meta, and header code injection -->
    {squarespace-headers}
  </head>
  <body id="{squarespace.page-id}" class="{squarespace.page-classes}">

    <div class="site-container">

      <header class="site-header">
        <div id="address-bar" class="subtle-box-shadow">
                <span class="address-bar-sec">
                    <a target="blank" href="https://goo.gl/maps/ibFWwhJha2T4q1v98" aria-label="Address: 3600 Hazelwood Court, Boulder, CO, 80304" id="nav-address">3600 Hazelwood Court, Boulder, CO, 80304 </a>
                </span>
                <div class="address-bar-sec" id="address-bar-sec-right">
                    <span id="address-bar-sec-phone">
                        <img src="{src/phone.svg}" style="padding-right: 5px; height: 20px;">
                        <a class="address-bar-sec-phone" href="tel:3034495214">(303)-449-5214 &nbsp;</a>
                    </span>
                    <a target="blank" href="https://goo.gl/maps/ibFWwhJha2T4q1v98"><button class="orange-btn" style="margin-left: 15px;">SCHEDULE A TOUR</button></a>
                </div>
            </div>
        {#  <squarespace:navigation navigationId="siteNav" template="site-navigation" />  }

        <!-- site title or logo -->
        {.section website}
          <div id="header-container">        
            <div id="navigation">
                <span id="logo-sec">
                    <a href="/"><img class="logo" src="{website.logoImageUrl}" alt="Patience Montessori Logo with Nurturing Future Leaders Tagline"></a>
                </span>
                <nav id="main-nav" class="subtle-box-shadow">
                    <a>About Us</a>|
                    <a>Programs</a>|
                    <a>Admissions</a>|
                    <a style="padding-right: 25px;">Contact Us</a>
                </nav>
            </div>

            <div id="introduction" class="section-box" style="text-align: center;">
                <h1 class="white-text subtle-text-shadow">Heartful, Intelligent, & Nurturing Education/Childcare</h1>
                <h6 class="white-text subtle-text-shadow">
                    Welcome to Patience Montessori in Boulder, CO. Our mission is to prepare your child for success in the world. To help build that foundation for success, we provide a multicultural, nurturing, fun and learning-oriented environment where your child can grow, thrive, and interact with other children and adults. We look forward to showing you what makes Patience Montessori so special! 
                </h6>
            </div>
    </div>
        {.end}
      </header>

      <!-- cms content injection point -->
      <main class="content-container" role="main" data-content-field="main-content">
       {squarespace.main-content}
      </main>

      <!--Footer with open block field -->
      <footer class="site-footer">
        <squarespace:block-field id="footerBlocks" columns="12" />
      </footer>

    </div>

    <!-- combo and minify scripts when not logged in -->
    <squarespace:script src="site.js" combo="{.if authenticatedAccount}false{.or}true{.end}" />

    <!-- other scripts, and footer code injection -->
    {squarespace-footers}

  </body>
  </html>
